@page
@model TutorZealand.Pages.Sessions.IndexModel

<table class="table">
    <thead>
        <tr>
            <th>Fag</th>
            <th>Lære</th>
            <th>Lokation</th>
            <th>Rum</th>
            <th>Uddannelse</th>
            <th>Start</th>
            <th>Slut</th>
            <th>Aktiv</th>
            <th>Beskrivelse</th>
            <th>Bookinger</th>
            <th>Optioner</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var session in Model.Sessions)
        {
            <tr>
                <td>@session.Subject?.Name</td>
                <td>@session.Teacher?.Name</td>
                <td>@session.Location?.Name</td>
                <td>@session.Room?.Name</td>
                <td>@session.Education?.Name</td>
                <td>@(session.StartDate.HasValue ? session.StartDate.Value.ToString("yyyy-MM-dd HH:mm") : "N/A")</td>
                <td>@(session.EndDate.HasValue ? session.EndDate.Value.ToString("yyyy-MM-dd HH:mm") : "N/A")</td>
                <td>@(session.IsActive.HasValue ? (session.IsActive.Value ? "Yes" : "No") : "N/A")</td>
                <td>@session.Description</td>
                <td>@session.Bookings.Count()</td>
                <td>
                    <a href="/Sessions/BookDetails?id=@session.Id" class="btn btn-primary">Book</a>
                </td>
            </tr>
        }
    </tbody>
</table>
